---
import BlogFilterHoverIndicator from "../../shared/hoverindicator/BlogFilterHoverIndicator";

interface Props {
  categories: Array<{
    id: string;
    label: string;
  }>;
}

const { categories } = Astro.props;
---

<div class="category-filter">
  <BlogFilterHoverIndicator 
    client:only="react"
    items={categories}
    onItemClick={(_categoryId: string) => {
      // Category clicked
    }}
    className="filter-nav vertical"
  />
</div>

<style>
  .category-filter {
    position: fixed;
    bottom: 2rem;
    left: 1rem;
    z-index: 1000;
    display: flex;
    justify-content: flex-start;
  }

  .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
    background: rgb(255 255 255 / 95%);
    box-shadow: 0 0.25rem 0.75rem rgb(0 0 0 / 15%);
    padding: 0.75rem;
    border-radius: 0.5rem;
    border: 1px solid #e2e8f0;
    max-width: 100%;
    overflow: hidden;
  }

  .blog-filter-hover-indicator .button-container {
    padding: 0.15rem 0.3rem 0 0;
  }

  .blog-filter-hover-indicator .indicator-button {
    padding: 0.3rem 0.5rem;
    white-space: nowrap;
  }

  /* タブレットサイズ */
  @media (width <= 64rem) {
    .category-filter {
      bottom: 8rem; /* 画面の上部に移動 */
      left: 1.5rem;
    }
    
    .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
      padding: 0.4rem 0.3rem;
      gap: 0.2rem;
    }
  }

  @media (width <= 47.9375rem) {
    .category-filter {
      bottom: 1rem;
      left: 1rem;
    }
    
    .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.2rem;
      padding: 0.4rem 0.3rem;
    }

    .blog-filter-hover-indicator.base-hover-indicator-nav.vertical {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.2rem;
    }
  }

  /* スマホサイズ */
  @media (width <= 48rem) {
    .category-filter {
      bottom: 0.75rem;
      left: 1rem;
    }
    
    .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 0.1rem;
      padding: 0.3rem 0.2rem;
      overflow-x: auto;
      white-space: nowrap;
    }

    .blog-filter-hover-indicator.base-hover-indicator-nav.vertical {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 0.1rem;
      overflow-x: auto;
    }
  }

  /* 小さなスマホサイズ */
  @media (width <= 30rem) {
    .category-filter {
      bottom: 0.5rem;
      left: 0.75rem;
    }
    
    .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
      gap: 0.1rem;
      padding: 0.3rem 0.15rem;
    }

    .blog-filter-hover-indicator.base-hover-indicator-nav.vertical {
      gap: 0.1rem;
    }
  }

  /* 非常に小さなスマホサイズ */
  @media (width <= 20rem) {
    .category-filter {
      bottom: 0.25rem;
      left: 0.5rem;
    }
    
    .blog-filter-hover-indicator.base-hover-indicator-nav.with-background {
      gap: 0.05rem;
      padding: 0.25rem 0.1rem;
    }

    .blog-filter-hover-indicator.base-hover-indicator-nav.vertical {
      gap: 0.05rem;
    }
  }

  @media (width <= 47.9375rem) {
    .blog-filter-hover-indicator.filter-nav {
      flex-direction: column;
      gap: 0.3rem;
    }

    .blog-filter-hover-indicator .filter-button {
      padding: 0.125rem 0.75rem;
      font-size: 0.8125rem;
    }
  }
</style>
