---
import Layout from "../layouts/Layout.astro";
import PhotoGallery from "../components/features/gallery/PhotoGallery";
import { getLatestPhotos } from "../lib/microcms";
import StackedSongCards from "../components/features/music/StackedSongCards";
import { loadSongsData } from "../lib/songs-loader";
import "../components/features/music/stacked-song-cards.css";
import "../components/features/gallery/photo-gallery.css";

// 最新の写真を取得
const latestPhotos = await getLatestPhotos(9);

// 楽曲データを動的に取得
const songsData = await loadSongsData();
---

<Layout title="takum1.me">
  <section class="hero">
    <div class="hero-inner">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="site-title">takum1</h1>
          <div class="site-sub">
            <div class="sub-line">Undergraduate / Brewer</div>
            <div class="sub-line">Coffee, Programming, Design</div>
          </div>
          <div class="hero-music">
                   <h3 class="favorite-songs-title">My Playlist</h3>
                   <StackedSongCards songs={songsData} client:load />
                 </div>
        </div>
      </div>
    </div>
  </section>

  <!-- フォトギャラリーセクション -->
  <section class="photo-gallery-section">
    <div class="photo-gallery-inner">
      <div class="gallery-section-header">
        <h2 class="section-title">Photo Gallery</h2>
        <p class="section-description">日々の記録</p>
      </div>
      
      <PhotoGallery photos={latestPhotos} client:load />
    </div>
  </section>

  <style>
    
    .hero { 
      padding: 6rem 0; 
      border-bottom: none; 
      min-height: 90vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      background: var(--background);
    }
    
    .hero-inner { 
      display: flex; 
      justify-content: center; 
      align-items: center;
      width: 100%;
      position: relative;
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 2rem;
      box-sizing: border-box;
    }
    
    @media (max-width: 768px) {
      .hero-inner {
        padding: 0 1rem;
      }
    }
    
    .hero-content {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 4rem;
      align-items: center;
      width: 100%;
      text-align: left;
    }
    
    .hero-text {
      max-width: 400px;
      text-align: left;
    }
    
    .site-title { 
      font-size: 5rem; 
      margin: 0 0 1.5rem 0; 
      letter-spacing: 0.02em; 
      color: var(--text-primary);
      font-weight: 800;
      line-height: 1.1;
    }
    
    .site-sub { 
      margin: 0 0 3rem 0; 
      color: var(--text-secondary);
      font-size: 1.6rem;
      line-height: 1.6;
      font-weight: 500;
    }
    
    .sub-line {
      margin-bottom: 0.5rem;
    }
    
    .sub-line:last-child {
      margin-bottom: 0;
    }
    
    
    .favorite-songs-title {
      font-size: 1.8rem;
      font-weight: 600;
      margin-bottom: 0;
      color: var(--text-primary);
    }
    
    .hero-music {
      margin-top: 3rem;
    }
    
    p {
      color: var(--text-secondary);
      line-height: 1.7;
      margin: 0;
    }

    /* タブレット対応 - 左揃えを維持 */
    @media (max-width: 1024px) {
      .hero-content {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: left;
      }
      
      .hero-text {
        text-align: left;
      }
    }

    @media (max-width: 1024px) {
      .hero-inner {
        max-width: var(--max-width);
        padding: 0 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .hero {
        padding: 4rem 0;
        min-height: 85vh;
      }
      
      .hero-inner {
        padding: 0 1rem;
        margin: 0 auto;
        width: 100%;
        box-sizing: border-box;
      }
      
      .hero-content {
        grid-template-columns: 1fr;
        gap: 3rem;
        text-align: center;
        justify-items: center;
      }
      
      .hero-text {
        text-align: center;
        max-width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      
      .site-title {
        font-size: 4rem;
        text-align: center;
      }
      
      .site-sub {
        font-size: 1.4rem;
        text-align: center;
      }
      
      .hero-music {
        margin-top: 3rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      
      .favorite-songs-title {
        font-size: 1.6rem;
        text-align: center;
        margin-bottom: 0;
      }
      
    }

    @media (max-width: 480px) {
      .hero {
        padding: 3rem 0;
        min-height: 80vh;
      }
      
      .hero-inner {
        padding: 0 0.75rem;
        margin: 0 auto;
        width: 100%;
        box-sizing: border-box;
      }
      
      .hero-content {
        gap: 2rem;
      }
      
      .site-title {
        font-size: 3.5rem;
        text-align: center;
      }
      
      .site-sub {
        font-size: 1.3rem;
        text-align: center;
      }
      
      .hero-music {
        margin-top: 2.5rem;
      }
      
      .favorite-songs-title {
        font-size: 1.5rem;
        text-align: center;
      }
      
    }

    /* フォトギャラリーセクションのスタイル */
    .photo-gallery-section {
      padding: 4rem 0;
      background: var(--background);
      border-top: 1px solid var(--primary-10);
    }
    
    .photo-gallery-inner {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    .gallery-section-header {
      text-align: center;
      margin-bottom: 3rem;
    }
    
    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--text-primary);
      margin: 0 0 1rem 0;
      letter-spacing: 0.02em;
    }
    
    .section-description {
      font-size: 1.1rem;
      color: var(--text-secondary);
      margin: 0;
    }
    
    /* モバイル対応 */
    @media (max-width: 768px) {
      .photo-gallery-section {
        padding: 3rem 0;
      }
      
      .photo-gallery-inner {
        padding: 0 1rem;
      }
      
      .section-title {
        font-size: 2rem;
      }
      
      .gallery-section-header {
        margin-bottom: 2rem;
      }
    }

  </style>
  
</Layout>