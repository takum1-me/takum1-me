    margin-bottom: 1rem;
  }

  .title-date h1 {
    margin: 0; /* h1のデフォルトマージンをリセット */
    margin-bottom: 0;
    /* 元のmargin-bottomを削除 */
  }

  .title-date p {
    /* position: absolute;
     を削除 */
    margin: 0;
    color: #64a19e;
    font-size: 0.9rem;
    white-space: nowrap;
    /* 日付が改行しないようにする */
