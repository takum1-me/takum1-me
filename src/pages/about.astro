---
import Layout from "../layouts/Layout.astro";
import PageTitle from "../components/PageTitle";
import PageContainer from "../components/PageContainer";
import Card, { CardHeader } from "../components/Card";
import SnsLinks from "../components/SnsLinks";
import "../components/page-title.css";
import "../components/page-container.css";
import "../components/card.css";
import "../components/sns-links.css";
---

<Layout title="About">
    <PageContainer variant="about">
        <PageTitle title="ABOUT" pageType="about" client:load />
        <div class="content-grid">
            <Card variant="interests">
                <CardHeader>
                    <h2>趣味・関心</h2>
                </CardHeader>
                
                <div class="coffee-section">
                    <h3>コーヒー</h3>
                    <p class="coffee-description">
                        ドリップにはCT62やbeandy silkを使用しています。ローストにも挑戦しており、特に浅煎りが好きです。
                    </p>
                    
                    <div class="coffee-equipment">
                        <h4>使用器具</h4>
                        <div class="equipment-tags">
                            <span class="equipment-tag">CT62</span>
                            <span class="equipment-tag">beandy silk</span>
                        </div>
                    </div>

                    <div class="coffee-preferences">
                        <h4>お気に入りの産地・品種</h4>
                        <div class="preference-tags">
                            <span class="preference-tag">コロンビア</span>
                            <span class="preference-tag">Chiroso</span>
                            <span class="preference-tag">その他様々な品種を探索中...</span>
                        </div>
                    </div>
                </div>

                <div class="other-interests">
                    <h3>その他の関心分野</h3>
                    <div class="interest-tags">
                        <span class="interest-tag">Design / UX</span>
                        <span class="interest-tag">キャッチコピー / 広告</span>
                        <span class="interest-tag">美術・読書</span>
                        <span class="interest-tag">旅行</span>
                    </div>
                </div>
            </Card>

            <Card variant="organizations">
                <CardHeader>
                    <h2>所属</h2>
                </CardHeader>
                <div class="organizations-list">
                    <div class="organization-item">
                        <h3>
                            <a href="https://www.coins.tsukuba.ac.jp/" target="_blank" rel="noopener noreferrer">
                                筑波大学情報学群情報科学類
                            </a>
                        </h3>
                        <span class="organization-period">2022年4月〜</span>
                    </div>
                    <div class="organization-item">
                        <h3>
                            <a href="https://www.zdk.tsukuba.ac.jp/" target="_blank" rel="noopener noreferrer">
                                全学学類・専門学群・総合学域群代表者会議
                            </a>
                        </h3>
                        <span class="organization-period">2023年4月〜</span>
                        <div class="role">議長（2024年5月〜2025年3月）</div>
                    </div>
                    <div class="organization-item">
                        <h3>
                            <a href="https://www.coins.tsukuba.ac.jp/~class/" target="_blank" rel="noopener noreferrer">
                                情報科学類 クラス代表者会議
                            </a>
                        </h3>
                        <span class="organization-period">2022年4月〜</span>
                        <div class="role">議長（2023年4月〜2025年3月）</div>
                    </div>
                    <div class="organization-item">
                        <h3>
                            <a href="https://cafeore.cafe/" target="_blank" rel="noopener noreferrer">
                                珈琲・俺
                            </a>
                        </h3>
                        <span class="organization-period">2023年6月〜</span>
                        <div class="role">総務局長（2024年1月〜2024年12月）</div>
                    </div>
                </div>
            </Card>

            <Card variant="qualifications">
                <CardHeader>
                    <h2>資格</h2>
                </CardHeader>
                <div class="qualifications-list">
                    <div class="qualification-item">
                        <span class="qualification-name">日商簿記3級</span>
                        <span class="qualification-date">2023年12月</span>
                    </div>
                    <div class="qualification-item">
                        <span class="qualification-name">AP（応用情報技術者検定）</span>
                        <span class="qualification-date">2024年12月</span>
                    </div>
                    <div class="qualification-item">
                        <span class="qualification-name">FE（基本情報技術者検定）</span>
                        <span class="qualification-date">2024年1月</span>
                    </div>
                    <div class="qualification-item">
                        <span class="qualification-name">知的財産管理技能検定3級</span>
                        <span class="qualification-date">2023年12月</span>
                    </div>
                </div>
            </Card>
        </div>

        <SnsLinks />
    </PageContainer>
</Layout>

<style>
    .content-grid {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 2rem;
    }

    .qualifications-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1rem;
    }

    .qualification-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: transparent;
        border-radius: 8px;
        border-left: 3px solid #8b7355;
        border-bottom: 1px solid #e2e8f0;
    }

    .qualification-name {
        font-weight: 500;
        color: #1e293b;
    }

    .qualification-date {
        color: #8b7355;
        font-size: 0.9rem;
        font-weight: 500;
        padding: 0.25rem 0;
    }

    .organizations-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .organization-item {
        padding: 1.5rem;
        background: transparent;
        border-radius: 8px;
        border-left: 3px solid #a68b5b;
        border-bottom: 1px solid #e2e8f0;
    }

    .organization-item h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: #1e293b;
    }

    .organization-item h3 a {
        color: inherit;
        text-decoration: none;
        display: inline-block;
        padding: 0.25rem 0;
        border-radius: 4px;
    }

    .organization-item h3 a:hover {
        color: #8b7355;
        background: rgba(139, 115, 85, 0.05);
        padding: 0.25rem 0.5rem;
    }

    .organization-period {
        color: #8b7355;
        font-size: 0.9rem;
        font-weight: 500;
        display: inline-block;
        margin-bottom: 0.5rem;
    }

    .role {
        color: #8b7355;
        font-weight: 500;
        font-size: 0.9rem;
        background: rgba(139, 115, 85, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        display: inline-block;
    }

    .coffee-section {
        margin-bottom: 2rem;
    }

    .coffee-section h3 {
        color: #8b7355;
        margin: 0 0 1rem 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .coffee-description {
        color: #64748b;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .coffee-equipment,
    .coffee-preferences {
        margin-bottom: 1.5rem;
    }

    .coffee-equipment h4,
    .coffee-preferences h4 {
        margin: 0 0 0.75rem 0;
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
    }

    .equipment-tags,
    .preference-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .equipment-tag,
    .preference-tag {
        background: transparent;
        color: #374151;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        border: 1px solid #e2e8f0;
    }

    .preference-tag {
        background: transparent;
        color: #8b7355;
        border-color: #d4c4a8;
    }

    .other-interests h3 {
        color: #8b7355;
        margin: 0 0 1rem 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .interest-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .interest-tag {
        background: transparent;
        color: #475569;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        border: 1px solid #e2e8f0;
    }

    @media (max-width: 768px) {
        .content-grid {
            gap: 1.5rem;
        }
        
        .qualifications-list {
            grid-template-columns: 1fr;
        }
        
        .organizations-list {
            grid-template-columns: 1fr;
        }
        
        .qualification-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .equipment-tags,
        .preference-tags,
        .interest-tags {
            justify-content: center;
        }
    }
</style>

