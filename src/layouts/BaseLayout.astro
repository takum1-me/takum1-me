---
export interface Props {
  pageTitle?: string;
  title?: string;
  description?: string;
  og?: {
    type?: string;
    title?: string;
    sitename?: string;
    image?: string;
    twitter?: {
      card?: string;
      site?: string;
      creator?: string;
    };
  };
  jsonld?: {
    attype?: string;
    author?: {
      type?: string;
      name?: string;
      url?: string;
    };
  };
}

const SITE_TITLE = "takum1.me";
const { pageTitle, title, description, og, jsonld } = Astro.props;

const metadata = {
  title: title ?? (pageTitle ? `${pageTitle} - ${SITE_TITLE}` : SITE_TITLE),
  description: description ?? "takum1's brew",
  og: {
    type: og?.type ?? "website",
    title:
      og?.title ?? (pageTitle ? `${pageTitle} - ${SITE_TITLE}` : SITE_TITLE),
    sitename: og?.sitename ?? SITE_TITLE,
    image: og?.image ?? Astro.site + "og.png", //完全修飾URLである必要がある
    twitter: {
      card: og?.twitter?.card ?? "summary_large_image",
      site: og?.twitter?.site ?? "@takum1_me",
      creator: og?.twitter?.creator ?? "@takum1_me",
    },
  },
  jsonld: {
    attype: jsonld?.attype ?? "WebSite",
    author: {
      attype: jsonld?.author?.type ?? "Person",
      name: jsonld?.author?.name ?? "takum1",
      url: jsonld?.author?.url ?? "https://takum1.me",
    },
  },
};

const jsonldStringfy = JSON.stringify({
  "@type": metadata.jsonld.attype,
  author: [
    {
      "@type": metadata.jsonld.author.attype,
      name: metadata.jsonld.author.name,
      url: metadata.jsonld.author.url,
    },
  ],
});
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/YN-icon.png" />
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
    <meta property="og:title" content={metadata.og.title} />
    <meta property="og:site_name" content={metadata.og.sitename} />
    <meta property="og:image" content={metadata.og.image} />
    <meta name="twitter:card" content={metadata.og.twitter.card} />
    <meta property="twitter:site" content={metadata.og.twitter.site} />
    <meta property="twitter:creator" content={metadata.og.twitter.creator} />
    <script type="application/ld+json" set:html={jsonldStringfy} />
    <meta name="generator" content={Astro.generator} />
    <title>{metadata.title}</title>
    <meta name="description" content={description} />
    <style>
      :root {
        --max-width: 960px;
        --gap: 16px;
      }
      body {
        font-family:
          ui-sans-serif,
          system-ui,
          -apple-system,
          Segoe UI,
          Roboto,
          Ubuntu,
          Cantarell,
          Noto Sans,
          Helvetica Neue,
          Arial,
          "Apple Color Emoji",
          "Segoe UI Emoji";
        margin: 0;
        color: #1f2937;
      }
      header {
        border-bottom: 1px solid #e5e7eb;
      }
      .container {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--gap);
      }
      nav {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 14px 0;
      }
      nav a {
        color: #374151;
        text-decoration: none;
        font-weight: 600;
      }
      nav a:hover {
        color: #111827;
      }
      main {
        padding: 32px 0;
      }
      footer {
        border-top: 1px solid #e5e7eb;
        padding: 16px 0;
        color: #6b7280;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="/works">Works</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <div class="container">
        © {new Date().getFullYear()} Takumi Kan
      </div>
    </footer>
  </body>
</html>
