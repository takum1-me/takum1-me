---
import ReactHeader from "../components/features/header/Header";
import ReactFooter from "../components/features/footer/Footer";
import "../styles/global.css";
import "../components/features/footer/footer.css";
export interface Props {
  pageTitle?: string;
  title?: string;
  description?: string;
  hideHeader?: boolean;
  og?: {
    type?: string;
    title?: string;
    sitename?: string;
    image?: string;
    twitter?: {
      card?: string;
      site?: string;
      creator?: string;
    };
  };
  jsonld?: {
    attype?: string;
    author?: {
      type?: string;
      name?: string;
      url?: string;
    };
  };
}

const SITE_TITLE = "takum1.me";
const { pageTitle, title, description, hideHeader = false, og, jsonld } = Astro.props;

const metadata = {
  title: title ?? (pageTitle ? `${pageTitle} - ${SITE_TITLE}` : SITE_TITLE),
  description: description ?? "takum1's brew",
  og: {
    type: og?.type ?? "website",
    title:
      og?.title ?? (pageTitle ? `${pageTitle} - ${SITE_TITLE}` : SITE_TITLE),
    sitename: og?.sitename ?? SITE_TITLE,
    image: og?.image ?? Astro.site + "og.png", //完全修飾URLである必要がある
    twitter: {
      card: og?.twitter?.card ?? "summary_large_image",
      site: og?.twitter?.site ?? "@takum1_me",
      creator: og?.twitter?.creator ?? "@takum1_me",
    },
  },
  jsonld: {
    attype: jsonld?.attype ?? "WebSite",
    author: {
      attype: jsonld?.author?.type ?? "Person",
      name: jsonld?.author?.name ?? "takum1",
      url: jsonld?.author?.url ?? "https://takum1.me",
    },
  },
};

const jsonldStringfy = JSON.stringify({
  "@context": "https://schema.org",
  "@type": metadata.jsonld.attype,
  author: [
    {
      "@type": metadata.jsonld.author.attype,
      name: metadata.jsonld.author.name,
      url: metadata.jsonld.author.url,
    },
  ],
});
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
    <meta property="og:title" content={metadata.og.title} />
    <meta property="og:site_name" content={metadata.og.sitename} />
    <meta property="og:image" content={metadata.og.image} />
    <meta name="twitter:card" content={metadata.og.twitter.card} />
    <meta property="twitter:site" content={metadata.og.twitter.site} />
    <meta property="twitter:creator" content={metadata.og.twitter.creator} />
    <script type="application/ld+json" is:inline set:html={jsonldStringfy} />
    <meta name="generator" content={Astro.generator} />
    <title>{metadata.title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="flex flex-col overflow-hidden visible">
    {!hideHeader && <ReactHeader client:load />}
    <main class="main-content flex-1 pt-8 max-w-[calc(95vw-8.25rem)] mx-auto ml-[8.25rem] mr-[2.5vw] max-[1024px]:max-w-[calc(95vw-6.5rem)] max-[1024px]:ml-[6.5rem] max-[1400px]:max-w-[calc(95vw-8.25rem)] max-[1400px]:ml-[8.25rem] min-[1400px]:ml-24 max-[768px]:max-w-[calc(100vw-2.5rem)] max-[768px]:ml-10 max-[768px]:mr-0 max-[480px]:max-w-[calc(100vw-2rem)] max-[480px]:ml-4 max-[320px]:max-w-[calc(100vw-1.5rem)] max-[320px]:ml-4">
      <div class="max-w-[var(--max-content-width)] mx-auto px-[var(--spacing-gap)]">
        <slot />
      </div>
    </main>
    <ReactFooter client:only="react" />
  </body>
  
  <style>
    :root {
      /* カラーパレット - より重い青系 */
      --color-primary-blue: #0d31aa;      /* メインの青（より重い） */
      --color-secondary-blue: #2563eb;    /* セカンダリの青 */
      --color-accent-blue: #3b82f6;       /* アクセントの青 */
      --color-light-blue: #60a5fa;        /* ライトブルー */
    }
    
    .main-content {
      margin-right: 0;
      border-bottom: 1px solid #e5e7eb;
      padding-bottom: 1rem;
      padding-top: 0;
    }
  </style>
</html>
